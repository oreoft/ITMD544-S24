extends layout

block content
    div(class="flex flex-col items-center justify-center min-h-screen bg-gray-100 px-4")
        div(class="w-full max-w-2xl bg-white rounded-lg shadow overflow-hidden p-6 text-left")
            h1(class="text-2xl font-bold text-gray-800 mb-2")= message
            h2(class="text-lg text-gray-600 mb-4")= error.status
            pre(class="text-sm text-gray-500 overflow-x-auto break-words whitespace-pre-wrap")
                | #{error.stack}
            a(href="/" class="mt-6 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Return Home
